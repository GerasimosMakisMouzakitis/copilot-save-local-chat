{
  "manifest_version": 3,
  "name": "Copilot Chat Saver",
  "version": "0.0.1",
  "description": "Save your Microsoft Copilot chat conversations to markdown files",
  
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  
  "host_permissions": [
    "https://copilot.microsoft.com/*",
    "https://*.bing.com/*",
    "https://www.bing.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://copilot.microsoft.com/*",
        "https://*.bing.com/*",
        "https://www.bing.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save Copilot Chat"
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "background": {
    "service_worker": "background.js"
  }
}